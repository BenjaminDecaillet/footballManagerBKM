			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="dialect" value="org.hibernate.dialect.HSQLDialect" />

		</properties> -->
	</persistence-unit>
</persistence>





